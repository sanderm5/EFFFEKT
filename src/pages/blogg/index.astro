---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) =>
  b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf()
);
---

<BaseLayout
  title="Blogg | EFFFEKT - Tips om nettsider, systemer og AI"
  description="Les vår blogg for praktiske tips om webutvikling, systemløsninger og AI for norske bedrifter."
  canonical="https://efffekt.no/blogg"
>
  <section class="blog-listing">
    <div class="container">
      <div class="section-header reveal">
        <p class="section-label">Blogg</p>
        <h1>Innsikt og <span class="text-accent">tips</span></h1>
        <p class="section-desc">Praktiske artikler om nettsider, systemer og AI for norske bedrifter.</p>
      </div>

      <div class="blog-grid">
        {sortedPosts.map((post) => (
          <article class="blog-card reveal">
            <a href={`/blogg/${post.slug}`}>
              <div class="blog-card-content">
                <div class="blog-meta">
                  <time datetime={post.data.publishedDate.toISOString()}>
                    {post.data.publishedDate.toLocaleDateString('no-NO', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                </div>
                <h2>{post.data.title}</h2>
                <p>{post.data.description}</p>
                <div class="blog-tags">
                  {post.data.tags.map(tag => (
                    <span class="blog-tag">{tag}</span>
                  ))}
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <p class="no-posts">Ingen innlegg ennå. Kom tilbake snart!</p>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .blog-listing {
    padding: 160px 0 100px;
    min-height: 80vh;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
  }

  .section-header h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: var(--text);
    margin-bottom: 16px;
  }

  .section-desc {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 32px;
  }

  .blog-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all 0.4s var(--ease-out);
  }

  .blog-card:hover {
    border-color: var(--border-light);
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  .blog-card a {
    display: block;
    text-decoration: none;
  }

  .blog-card-content {
    padding: 32px;
  }

  .blog-meta time {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .blog-card h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 12px 0;
    color: var(--text);
    line-height: 1.4;
  }

  .blog-card p {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 16px;
  }

  .blog-tag {
    font-size: 0.75rem;
    padding: 4px 12px;
    background: var(--accent-light);
    color: var(--accent);
    border-radius: 100px;
  }

  .no-posts {
    text-align: center;
    color: var(--text-muted);
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .blog-listing {
      padding: 120px 0 60px;
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Scroll reveal animations
  function initReveal() {
    const revealElements = document.querySelectorAll('.reveal');

    const revealOnScroll = () => {
      revealElements.forEach(el => {
        const rect = el.getBoundingClientRect();
        const isVisible = rect.top < window.innerHeight - 100;
        if (isVisible) {
          el.classList.add('visible');
        }
      });
    };

    window.addEventListener('scroll', revealOnScroll);
    revealOnScroll();
  }

  initReveal();
  document.addEventListener('astro:page-load', initReveal);
</script>
