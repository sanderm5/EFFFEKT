---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout
  title={`${post.data.title} | EFFFEKT Blogg`}
  description={post.data.description}
  canonical={`https://efffekt.no/blogg/${post.slug}`}
>
  <article class="blog-post">
    <div class="container">
      <header class="blog-post-header reveal">
        <a href="/blogg" class="back-link">
          <i class="fas fa-arrow-left"></i> Tilbake til bloggen
        </a>
        <time datetime={post.data.publishedDate.toISOString()}>
          {post.data.publishedDate.toLocaleDateString('no-NO', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <h1>{post.data.title}</h1>
        <p class="blog-post-description">{post.data.description}</p>
        <div class="blog-post-meta">
          <div class="tags">
            {post.data.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      </header>

      <div class="blog-post-content prose reveal">
        <Content />
      </div>

      <footer class="blog-post-footer">
        <a href="/blogg" class="btn btn-ghost">
          <i class="fas fa-arrow-left"></i> Alle innlegg
        </a>
        <a href="/#kontakt" class="btn btn-primary">
          Kontakt oss <i class="fas fa-arrow-right"></i>
        </a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding: 140px 0 100px;
  }

  .blog-post-header {
    max-width: 720px;
    margin: 0 auto 48px;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.875rem;
    color: var(--text-muted);
    text-decoration: none;
    margin-bottom: 24px;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--accent);
  }

  .blog-post-header time {
    display: block;
    font-size: 0.875rem;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .blog-post-header h1 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    color: var(--text);
    line-height: 1.2;
    margin-bottom: 16px;
  }

  .blog-post-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 24px;
  }

  .blog-post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 16px;
  }

  .tags {
    display: flex;
    gap: 8px;
  }

  .tag {
    font-size: 0.75rem;
    padding: 4px 12px;
    background: var(--accent-light);
    color: var(--accent);
    border-radius: 100px;
  }

  .blog-post-content {
    max-width: 720px;
    margin: 0 auto;
  }

  /* Prose styles for markdown content */
  .prose :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text);
    margin-top: 48px;
    margin-bottom: 24px;
  }

  .prose :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text);
    margin-top: 32px;
    margin-bottom: 16px;
  }

  .prose :global(p) {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 24px;
  }

  .prose :global(ul),
  .prose :global(ol) {
    color: var(--text-secondary);
    margin-bottom: 24px;
    padding-left: 24px;
  }

  .prose :global(li) {
    margin-bottom: 8px;
    line-height: 1.7;
  }

  .prose :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    text-decoration: none;
  }

  .prose :global(strong) {
    color: var(--text);
    font-weight: 600;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 24px;
    margin: 32px 0;
    font-style: italic;
    color: var(--text-muted);
  }

  .prose :global(code) {
    background: var(--bg-card);
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.875em;
  }

  .prose :global(pre) {
    background: var(--bg-card);
    padding: 24px;
    border-radius: var(--radius);
    overflow-x: auto;
    margin: 24px 0;
  }

  .blog-post-footer {
    max-width: 720px;
    margin: 64px auto 0;
    padding-top: 32px;
    border-top: 1px solid var(--border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: 120px 0 60px;
    }

    .blog-post-footer {
      flex-direction: column;
    }

    .blog-post-footer .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script>
  function initReveal() {
    const revealElements = document.querySelectorAll('.reveal');

    const revealOnScroll = () => {
      revealElements.forEach(el => {
        const rect = el.getBoundingClientRect();
        const isVisible = rect.top < window.innerHeight - 100;
        if (isVisible) {
          el.classList.add('visible');
        }
      });
    };

    window.addEventListener('scroll', revealOnScroll);
    revealOnScroll();
  }

  initReveal();
  document.addEventListener('astro:page-load', initReveal);
</script>
