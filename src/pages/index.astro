---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/home/Hero.astro';
import Scanner from '../components/home/Scanner.astro';
import Team from '../components/home/Team.astro';
import Services from '../components/home/Services.astro';
import CaseStudy from '../components/home/CaseStudy.astro';
import Contact from '../components/home/Contact.astro';
import PromoPopup from '../components/home/PromoPopup.astro';
---

<BaseLayout
  title="EFFFEKT | Nettsider, Systemer & AI for Bedrifter"
  description="Tre utviklere som bygger nettsider, webapplikasjoner og AI-løsninger for norske bedrifter. Fastpris. Gratis demo."
>
  <Hero />
  <Scanner />
  <Team />
  <Services />
  <CaseStudy />
  <Contact />
  <PromoPopup />
</BaseLayout>

<script>
  function initHomePage() {
    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    // Smooth scroll
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({ behavior: prefersReducedMotion ? 'auto' : 'smooth', block: 'start' });
            document.querySelector('.nav-links')?.classList.remove('active');
            document.querySelector('.nav-toggle')?.classList.remove('active');
          }
        }
      });
    });

    // Enhanced scroll reveal animations - støtter alle reveal-varianter
    const revealElements = document.querySelectorAll(
      '.reveal, .reveal-scale, .reveal-left, .reveal-right, .reveal-mask, .reveal-stagger'
    );

    // Parallax elementer
    const parallaxElements = document.querySelectorAll('.parallax-element');

    const revealOnScroll = () => {
      const windowHeight = window.innerHeight;

      // Reveal animations
      revealElements.forEach(el => {
        const elementTop = el.getBoundingClientRect().top;
        const revealPoint = windowHeight * 0.85; // Trigger ved 85% av viewport
        if (elementTop < revealPoint) {
          el.classList.add('visible');
        }
      });

      // Parallax effect (skip if reduced motion)
      if (!prefersReducedMotion) {
        const scrolled = window.scrollY;
        parallaxElements.forEach(el => {
          const speed = parseFloat((el as HTMLElement).dataset.parallaxSpeed || '0.5');
          const yPos = -(scrolled * speed);
          (el as HTMLElement).style.transform = `translate3d(0, ${yPos}px, 0)`;
        });
      }
    };

    window.addEventListener('scroll', revealOnScroll, { passive: true });
    revealOnScroll(); // Run on load
  }

  // Run on initial load and after View Transitions
  initHomePage();
  document.addEventListener('astro:page-load', initHomePage);
</script>
