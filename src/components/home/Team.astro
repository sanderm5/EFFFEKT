---
// Team section component
import { Image } from 'astro:assets';
import Icon from '../icons/Icon.astro';
import sanderImg from '../../assets/sander.jpg';
import danielImg from '../../assets/daniel.jpg';

const teamMembers = [
  {
    name: 'Sander Martinsen',
    title: 'Full-Stack Developer',
    image: sanderImg,
    description: 'Brenner for moderne webteknologi og systemintegrasjoner. Bygger skalerbare løsninger som faktisk løser problemer, og automatisering som sparer tid.',
    skills: ['React', 'Node.js', 'TypeScript', 'Astro', 'AWS'],
    phone: '+4745140089',
    phoneDisplay: '451 40 089',
    email: 'sander@efffekt.no'
  },
  {
    name: 'Daniel Barlag',
    title: 'Full-Stack Developer',
    image: danielImg,
    description: 'Ekspert på backend-utvikling, datasikkerhet, databasearkitektur og API-design. Bygger robuste systemer som tåler å vokse.',
    skills: ['Python', 'Node.js', 'PostgreSQL', 'API-design', 'Sikkerhet', 'Docker'],
    phone: '+4798035064',
    phoneDisplay: '980 35 064',
    email: 'daniel@efffekt.no'
  }
];
---

<section id="team" class="section">
  <div class="container">
    <div class="section-header first-section-reveal reveal-hero">
      <p class="section-label">Din digitale partner</p>
      <h2 class="split-words" data-split-text>Vi bygger <span class="text-accent">sammen</span></h2>
      <p class="section-desc">Tett samarbeid fra første samtale til ferdig løsning. Vi er her for deg, ikke bare prosjektet.</p>
    </div>

    <div class="team reveal-stagger">
      {teamMembers.map((member) => (
        <div class="team-member card-tilt">
          <div class="member-photo image-zoom-container">
            <Image src={member.image} alt={member.name} width={320} height={320} quality={90} loading="lazy" />
          </div>
          <div class="member-info">
            <h3>{member.name}</h3>
            <span class="member-title">{member.title}</span>
            <p>{member.description}</p>

            <div class="member-skills">
              {member.skills.map((skill) => (
                <span class="skill-tag">{skill}</span>
              ))}
            </div>

            <div class="member-contacts">
              <a href={`tel:${member.phone}`} class="member-contact link-animated">
                <Icon name="phone" size={14} /> {member.phoneDisplay}
              </a>
              <a href={`mailto:${member.email}`} class="member-contact link-animated">
                <Icon name="envelope" size={14} /> {member.email}
              </a>
            </div>
          </div>
        </div>
      ))}

      <!-- MIDLERTIDIG SKJULT - MICHAEL: team-member blokk -->
    </div>
  </div>
</section>
