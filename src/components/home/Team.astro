---
// Team section component
import { Image } from 'astro:assets';
import Icon from '../icons/Icon.astro';
import sanderImg from '../../assets/sander.jpg';
import danielImg from '../../assets/daniel.jpg';
// import michaelImg from '../../assets/michael.jpg'; // MIDLERTIDIG SKJULT
---

<section id="team" class="section">
  <div class="container">
    <div class="section-header reveal">
      <p class="section-label">Møt utviklerne</p>
      <h2>Tre utviklere, full <span class="text-accent">fokus</span></h2>
      <p class="section-desc">Ingen byrå, ingen mellomledd. Du snakker direkte med de som bygger løsningen din.</p>
    </div>

    <div class="team reveal-stagger">
      <div class="team-member card-tilt">
        <div class="member-photo image-zoom-container">
          <Image src={sanderImg} alt="Sander Martinsen" width={140} height={140} loading="lazy" />
        </div>
        <div class="member-info">
          <h3>Sander Martinsen</h3>
          <span class="member-title">Full-Stack Developer</span>
          <p>Erfaren med Next.js, Supabase og komplekse systemløsninger. Brenner for å automatisere det kjedelige.</p>
          <a href="tel:+4745140089" class="member-contact link-animated">
            <Icon name="phone" size={14} /> 451 40 089
          </a>
          <a href="mailto:sander@efffekt.no" class="member-contact link-animated">
            <Icon name="envelope" size={14} /> sander@efffekt.no
          </a>
        </div>
      </div>

      <div class="team-member card-tilt">
        <div class="member-photo image-zoom-container">
          <Image src={danielImg} alt="Daniel Barlag" width={140} height={140} loading="lazy" />
        </div>
        <div class="member-info">
          <h3>Daniel Barlag</h3>
          <span class="member-title">Full-Stack Developer</span>
          <p>Mange års erfaring innen Python, JavaScript og backend. Spesialist på databasehåndtering og sikkerhet.</p>
          <a href="tel:+4798035064" class="member-contact link-animated">
            <Icon name="phone" size={14} /> 980 35 064
          </a>
          <a href="mailto:daniel@efffekt.no" class="member-contact link-animated">
            <Icon name="envelope" size={14} /> daniel@efffekt.no
          </a>
        </div>
      </div>

      <!-- MIDLERTIDIG SKJULT - MICHAEL: team-member blokk -->
    </div>
  </div>
</section>
