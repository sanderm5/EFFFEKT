---
import { ClientRouter } from 'astro:transitions';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';

// Local fonts (eliminates external DNS lookup)
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';

interface Props {
  title: string;
  description: string;
  canonical: string;
  serviceName: string;
  serviceDescription: string;
  price: string;
  faqItems: Array<{question: string; answer: string}>;
}

const {
  title,
  description,
  canonical,
  serviceName,
  serviceDescription,
  price,
  faqItems
} = Astro.props;

import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="no" prefix="og: https://ogp.me/ns#">
<head>
  <!-- Prevent theme flash - dark is default -->
  <script is:inline>
    (function() {
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme) {
        document.documentElement.setAttribute('data-theme', savedTheme);
      }
      // Dark theme is default (no attribute needed), only set if explicitly light
    })();
  </script>
  <ClientRouter />
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#3b82f6">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="keywords" content="webutvikler, nettside, webapplikasjon, AI, Norge, EFFFEKT">
  <meta name="author" content="EFFFEKT">
  <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large">
  <link rel="canonical" href={canonical}>

  <!-- Favicons -->
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon.png">
  <link rel="icon" type="image/svg+xml" href="/assets/logo-icon.svg">
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon.png">

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonical}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content="https://efffekt.no/assets/og-image.png?v=2">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:locale" content="no_NO">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content="https://efffekt.no/assets/og-image.png?v=2">

  <!-- Schema.org - Service -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": serviceName,
    "description": serviceDescription,
    "provider": {
      "@type": "LocalBusiness",
      "name": "EFFFEKT",
      "url": "https://efffekt.no"
    },
    "areaServed": {
      "@type": "Country",
      "name": "Norge"
    },
    "offers": {
      "@type": "Offer",
      "price": price,
      "priceCurrency": "NOK"
    }
  })} />

  <!-- Schema.org - FAQ -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqItems.map(item => ({
      "@type": "Question",
      "name": item.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": item.answer
      }
    }))
  })} />

</head>
<body>
  <!-- Video Background (same as homepage) -->
  <div class="video-background" id="hero-video-container">
    <video id="hero-video" autoplay muted loop playsinline preload="metadata">
      <source src="/assets/video/hero.mp4" type="video/mp4">
    </video>
    <div class="video-overlay" id="video-overlay"></div>
  </div>

  <script is:inline>
    (function() {
      const video = document.getElementById('hero-video');
      const overlay = document.getElementById('video-overlay');

      if (video) {
        video.currentTime = 2;
        video.playbackRate = 0.75;
      }

      window.addEventListener('scroll', () => {
        const scrollY = window.scrollY;
        const windowHeight = window.innerHeight;

        // Blur increases as you scroll (0 to 8px over first viewport)
        const blurAmount = Math.min(8, (scrollY / windowHeight) * 8);

        // Overlay darkens video slightly when scrolled (0 to 0.5 opacity)
        const overlayOpacity = Math.min(0.5, (scrollY / windowHeight) * 0.5);

        if (video) {
          video.style.filter = `blur(${blurAmount}px)`;
          video.style.transform = `scale(${1 + blurAmount * 0.01})`; // Compensate for blur edges
        }

        if (overlay) {
          overlay.style.opacity = overlayOpacity;
        }
      });
    })();
  </script>

  <a href="#main-content" class="skip-link">Hopp til hovedinnhold</a>

  <Header showCenteredLogo={false} transition:persist />

  <main id="main-content" transition:animate="fade">
    <slot />
  </main>

  <Footer transition:persist />

  <script>
    function initServiceLayout() {
      // Smooth scroll for anchor links
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', (e) => {
          e.preventDefault();
          const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
          if (href) {
            const target = document.querySelector(href);
            if (target) {
              target.scrollIntoView({ behavior: prefersReducedMotion ? 'auto' : 'smooth', block: 'start' });
              // Close mobile menu if open
              document.querySelector('.nav-links')?.classList.remove('active');
              document.querySelector('.nav-toggle')?.classList.remove('active');
            }
          }
        });
      });
    }

    // Initialize on page load and View Transitions
    initServiceLayout();
    document.addEventListener('astro:page-load', initServiceLayout);
  </script>

  <script>
    // Modern scroll reveal animations (matching homepage)
    function initScrollReveal() {
      const revealElements = document.querySelectorAll(
        '.reveal, .reveal-scale, .reveal-left, .reveal-right, .reveal-mask, .reveal-stagger, [data-aos]'
      );
      if (!revealElements.length) return;

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            entry.target.classList.add('aos-animate'); // Support legacy data-aos
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1, rootMargin: '-50px' });

      revealElements.forEach(el => {
        el.classList.add('aos-init');
        observer.observe(el);
      });
    }

    initScrollReveal();
    document.addEventListener('astro:page-load', initScrollReveal);
  </script>

  <script is:inline>
    // FAQ toggle - global event delegation med guard mot multiple registreringer
    if (!window.__faqInitialized) {
      window.__faqInitialized = true;
      document.addEventListener('click', function(e) {
        var btn = e.target.closest('.faq-question');
        if (!btn) return;

        e.preventDefault();
        var item = btn.parentElement;
        if (!item) return;

        var isOpen = item.classList.contains('open');

        // Lukk alle åpne FAQ-items
        document.querySelectorAll('.faq-item.open').forEach(function(el) {
          el.classList.remove('open');
          var elBtn = el.querySelector('.faq-question');
          if (elBtn) elBtn.setAttribute('aria-expanded', 'false');
        });

        // Åpne denne hvis den ikke var åpen
        if (!isOpen) {
          item.classList.add('open');
          btn.setAttribute('aria-expanded', 'true');
        }
      });
    }
  </script>
</body>
</html>
